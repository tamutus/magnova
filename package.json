{
  "name": "magnova",
  "version": "1.1.6",
  "description": "Global issue explorer, network builder, and crowdsourced task-planner",
  "main": "app.ts",
  "scripts": {
    "build": "tsc && cp -R public dist && cp -R views dist",
    "buildw": "tsc && Xcopy /e .\\public .\\dist\\public\\ && Xcopy /E .\\views .\\dist\\public\\",
    "clean": "tsc --build --clean && rm -r dist",
    "cleanw": "tsc --build --clean && del dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "set TS_NODE_PROJECT=.\\tsconfig.dist.json&& node -r tsconfig-paths/register dist/app.js",
    "dev": "nodemon -r tsconfig-paths/register app.ts",
    "docker-start": "node -r tsconfig-paths/register app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tamutus/magnova/"
  },
  "keywords": [
    "civic",
    "direct",
    "crowdsourced",
    "action",
    "planning",
    "global",
    "issues",
    "anarchism",
    "communism",
    "resistance",
    "grassroots",
    "participatory",
    "democracy",
    "resource",
    "resource-based",
    "economy",
    "rbe",
    "moneyless",
    "society"
  ],
  "author": "Lavra Tamutus",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "async": "^3.2.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.2",
    "express-session": "^1.17.1",
    "firebase": "^9.9.3",
    "firebase-admin": "^11.0.1",
    "method-override": "^3.0.0",
    "mongoose": "^6.5.1",
    "mongoose-fuzzy-searching-v3": "^2.1.0",
    "nodemailer": "^6.7.5",
    "nodemon": "^2.0.9",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0",
    "path": "^0.12.7",
    "serve-favicon": "^2.5.0",
    "tsconfig-paths": "^3.14.1",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/method-override": "^0.0.32",
    "@types/node": "^17.0.29",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/passport-local-mongoose": "^6.1.1",
    "@types/serve-favicon": "^2.5.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
