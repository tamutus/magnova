{
  "compilerOptions": {
    "incremental": true,

    "target": "es2016",

    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
        "node"
    ],
    "resolveJsonModule": true,

    "allowJs": true,

    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "importsNotUsedAsValues": "remove",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "alwaysStrict": true,

    "skipLibCheck": true
  },

  "exclude": ["dist", "public", "views"]
}
